<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>


    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_80"
        android:paddingTop="@dimen/dp_60"
        android:paddingEnd="@dimen/dp_80"
        android:paddingBottom="@dimen/dp_60">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_16"
                    android:layout_weight="1"
                    android:onClick="toLanguageWise"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/language_bg" />

                    <TextView
                        style="@style/item_msg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="言语语言" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/fun_padding"
                    android:layout_weight="1"
                    android:onClick="onMathLogic"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/math_logic_bg" />

                    <TextView
                        style="@style/item_msg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="数理逻辑" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/fun_padding"
                    android:layout_weight="1"
                    android:onClick="toCommunication"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/communication_bg" />

                    <TextView
                        style="@style/item_msg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="人际交往" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/fun_padding"
                    android:layout_weight="1"
                    android:onClick="toVision"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/vision_bg" />

                    <TextView
                        style="@style/item_msg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="视觉空间" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/fun_padding"
                    android:layout_weight="1"
                    android:onClick="toMusic"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/music_bg" />

                    <TextView
                        style="@style/item_msg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="音乐节奏" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/fun_padding"
                    android:layout_weight="1"
                    android:onClick="toSelfAware"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/self_aware_bg" />

                    <TextView
                        style="@style/item_msg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="自我意识" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/fun_padding"
                    android:layout_weight="1"
                    android:onClick="toSports"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sport_bg" />

                    <TextView
                        style="@style/item_msg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="身体运动" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/fun_padding"
                    android:layout_weight="1"
                    android:onClick="toNatureObserve"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/nature_observe_bg" />

                    <TextView
                        style="@style/item_msg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="自然观察" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_24">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/fun_padding"
                android:layout_weight="1"
                android:background="@drawable/shape_large_btn_bg"
                android:gravity="center"
                android:onClick="onInnovationAbility"
                android:paddingTop="@dimen/dp_30"
                android:paddingBottom="@dimen/dp_30"
                android:text="创新能力"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_weight="1"
                android:background="@drawable/shape_large_btn_bg"
                android:gravity="center"
                android:onClick="onMultiTest"
                android:paddingTop="@dimen/dp_30"
                android:paddingBottom="@dimen/dp_30"
                android:text="多元测评"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

</layout>