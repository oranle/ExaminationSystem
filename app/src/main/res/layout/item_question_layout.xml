<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="15dp">

        <TextView
            android:id="@+id/question_stem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/question_template"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/question_media_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="start|center_vertical"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/question_stem">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line_complex" />

                <ImageView
                    android:id="@+id/iv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line_complex" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/media_ctrl"
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_height="wrap_content">

                <com.oranle.es.module.base.view.JzvdStdMp3
                    android:id="@+id/mp3_view"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>

            </LinearLayout>


        </LinearLayout>

        <RadioGroup
            android:id="@+id/choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/question_media_layout"
            tools:layout_editor_absoluteX="15dp">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/option_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="35dp"
                android:checked="true"
                android:text="A 1"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="194dp" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/option_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="35dp"
                android:text="B 1"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="194dp" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/option_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="35dp"
                android:text="C 1"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="194dp" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/option_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="35dp"
                android:text="D 1"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="194dp" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/option_e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D 1"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="194dp" />

        </RadioGroup>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
